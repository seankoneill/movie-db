html
  head
    title MovieDB Contribute
    meta(charset="utf-8")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous")
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Noto+Sans+JP")
    link(rel="stylesheet" href="css/main.css")

  body
    include partials/header.pug
    div(class="center-container")

      form(class="form" action="/people" method="POST")
        b Add a person:
        br
        |Name:
        input(class="txt" type="text" id="actor-name-field" name="name")
        br
        input(class="btn" type="submit" name="addPerson" value="Add Person")
        br

      form(class="form" action="/movies" method="POST")
        b Add a Movie:
        br
        |Title:
        input(class="txt" type="text" id="title-field" name="title")
        br
        |Release Date:
        input(class="txt" type="text" id="date-field" name="date")
        br
        |Runtime:
        input(class="txt" type="text" id="runtime-field" name="runtime")
        br
        |Plot:
        input(class="txt" type="text" id="runtime-field" name="plot")
        br
        |Genres (comma separated):
        input(class="txt" type="text" id="runtime-field" name="genres")
        br
        |Actors (comma separated):
        input(class="txt" type="text" id="actors-field" name="actors")
        br
        |Directors (comma separated):
        input(class="txt" type="text" id="directors-field" name="directors")
        br
        |Writers (comma separated):
        input(class="txt" type="text" id="writers-field" name="writers")
        br
        input(class="btn" type="submit" name="addMovie" value="Add Movie")
