doctype html
html
  head
    meta(charset="utf-8")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous")
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Noto+Sans+JP")
    link(rel="stylesheet" href="css/main.css")

    title MovieDB Login
  body(class="text-center h-100")
    include partials/header.pug
    div(class="center-container")
      form(class="form login align-middle" action="/login" method="post")
        h3 Sign In/Up:
        br
        input(class="form-control txt" type="username" id="username-input" name="username" placeholder="Username" required autofocus)
        br
        input(class="form-control txt" type="password" id="password-input" name="password" placeholder="Password" required)
        br
        button(class="btn" type="submit" name="login" value="Log In") Log In
        br
        button(class="btn" type="submit" name="signup" value="Sign Up") Sign Up
