html
  head
    title MovieDB Home
    meta(charset="utf-8")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous")
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Noto+Sans+JP")
    link(rel="stylesheet" href="css/main.css")

  body
    include partials/header.pug
    div(class="center-container")
      form(class="form" action="/movies")
        b Search Movies:
        br
        input(class="txt" type="text" id="title" name="title" placeholder="Title...")
        br
        input(class="txt" type="text" id="actor" name="actor" placeholder="Actor...")
        br
        input(class="txt" type="text" id="genre" name="genre" placeholder="Genre...")
        br
        input(class="btn" type="submit" value="Search") 

      form(class="form" action="/people")
        b Search People:
        br
        input(class="txt" type="text" name="name" placeholder="Name...")
        br
        input(class="btn" type="submit" value="Search") 

      form(class="form" action="/users")
        b Search Users:
        br
        input(class="txt" type="text" id="username" name="username" placeholder="Username...")
        br
        input(class="btn" type="submit" value="Search") 
